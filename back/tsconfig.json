{
  "compilerOptions": {
    "module": "nodenext",
    "target": "esnext",
    "moduleResolution": "NodeNext",

    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,   // ðŸ‘ˆ NECESARIO PARA EXPRESS 4 + NODE NEXT

    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",

    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "types": ["node"],                      // ðŸ‘ˆ evita error "Cannot find type definition for 'node'"

    "allowImportingTsExtensions": true,     // ya lo tenÃ­as
    "noEmit": true
  }
}
