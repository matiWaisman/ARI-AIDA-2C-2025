{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend ARI-AIDA",
  "type": "module",
  "main": "src/app.ts",
  "scripts": {
    "start": "node --loader ts-node/esm src/app.ts",
    "dev": "nodemon --watch src --ext ts --exec \"node --loader ts-node/esm src/app.ts\"",
    "db:init": "psql -U aida_admin -d aida_db -f infrastructure/db/create-db.sql && psql -U aida_admin -d aida_db -f infrastructure/db/create-schema.sql",
    "db:shell": "psql -U aida_admin -d aida_db"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "csv-parse": "^6.1.0",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "multer": "^2.0.2",
    "pg": "^8.16.3",
    "readline": "^1.3.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/csv-parse": "^1.1.12",
    "@types/express": "^5.0.3",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.3.0",
    "@types/pg": "^8.15.5",
    "http-server": "^14.1.1",
    "nodemon": "^3.1.4",
    "ts-node": "^10.9.2"
  }
}
