{
  "name": "ari-aida-project",
  "version": "1.0.0",
  "description": "Proyecto ARI-AIDA con backend y frontend",
  "scripts": {
    "start": "concurrently \"npm run start:back\" \"npm run start:front\"",
    "start:back": "cd back && npm start",
    "start:front": "cd aida-app && npm start",
    "install:all": "npm install && cd back && npm install && cd ../aida-app && npm install",
    "build": "npm run build:back && npm run build:front",
    "build:back": "cd back && npm run build",
    "build:front": "cd aida-app && npm run build",
    "test": "npm run test:back && npm run test:front",
    "test:back": "cd back && npm test",
    "test:front": "cd aida-app && npm test",
    "dev": "concurrently \"npm run dev:back\" \"npm run dev:front\"",
    "dev:back": "cd back && npm run dev",
    "dev:front": "cd aida-app && npm run dev"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/connect": "^3.4.38",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/express-session": "^1.18.2",
    "concurrently": "^8.2.2",
    "@types/node": "^24.10.1"
  },
  "workspaces": [
    "back",
    "aida-app"
  ],
  "dependencies": {
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.3",
    "express-session": "^1.18.2"
  }
}
